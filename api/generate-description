export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  try {
    const { propertyData } = req.body;
    
    // Simple mock response (no OpenAI)
    const mockDescription = `Beautiful ${propertyData.bedrooms || 'X'} bedroom, ${propertyData.bathrooms || 'X'} bathroom home located at ${propertyData.address || 'Unknown Address'}. This property features ${propertyData.features || 'various amenities'} and is priced at $${propertyData.price || 'XXX,XXX'}.`;
    
    res.status(200).json({ description: mockDescription });

  } catch (error) {
    console.error('Error:', error);
    res.status(500).json({ error: 'Failed to generate description' });
  }
}
